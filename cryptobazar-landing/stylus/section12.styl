@import colors

#section12
	font-family Roboto
	display -webkit-box
	display -ms-flexbox
	display flex
	-ms-flex-wrap nowrap
	flex-wrap nowrap
	-webkit-box-pack justify
	-ms-flex-pack justify
	justify-content space-between
	min-height 100vh
	.content-block
		width 50%
		color $color_brand_white
		padding 6.1em 0.2em 4em 0.2em
		.header
			font-size 2.2em
			line-height 1.55
			font-weight 600
			text-align center
			margin 0 auto
		.strategy-list
			width 73%
			margin 2.9em auto 0 auto
			list-style-type disc
			font-size 1.514em
			line-height 1.73em
		&.block1
			background #6793bd
			.header
				color $color_brand_white
		&.block2
			background url("../media/images/section12/cryptobazar-building.jpg") center no-repeat
			background-size cover
			color $color_brand_grey
			.invest-point
				font-size 1.5em
				line-height 1.55
				font-weight 500
				text-align center
				margin 1.5em auto
				&:first-of-type
					margin-top 2.9em
				strong
					font-weight 700
					font-size 32px
					color $color_brand_blue
					display inline-block
					margin-bottom 16px
			a
				width 20.4em
				margin 0 auto
				display block
				.request
					color #ffffff
					font-size 1.5em
					line-height 1.55
					font-weight 300
					border-width 1px
					border-radius 30px
					background-color rgb(63,65,71)
					border-color transparent
					font-family Roboto
					-webkit-transition background-color 0.2s ease-in-out, color 0.2s ease-in-out, border-color 0.2s ease-in-out
					-o-transition background-color 0.2s ease-in-out, color 0.2s ease-in-out, border-color 0.2s ease-in-out
					transition background-color 0.2s ease-in-out, color 0.2s ease-in-out, border-color 0.2s ease-in-out
					padding 0.8em 1em
					margin 0.9em auto
					cursor pointer
					outline none
					&:hover
						background-color rgb(93,143,194)
						color #ebebeb

