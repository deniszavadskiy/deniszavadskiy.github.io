@import "colors.styl"

#section6
  padding 4em 0 2em
  background-color #f3f4fa
  text-align center

  h4
    margin 1em 0 3em
    &.carousel-title
      margin 2em 0

  .slick-carousel
    .row
      max-width 1200px
      width 100%
      display -webkit-box
      display -moz-box
      display -ms-flexbox
      display -webkit-flex
      display flex
      -webkit-flex-flow row wrap
      -moz-flex-flow row wrap
      -ms-flex-flow row wrap
      -o-flex-flow row wrap
      flex-flow row wrap
      outline none
    img
      max-width 140px
      margin auto
      -webkit-filter grayscale(100%)
      filter grayscale(100%)
      -webkit-filter gray
      filter gray
      opacity 0.5
      &:hover
        -webkit-filter grayscale(0%)
        filter grayscale(0%)
        -webkit-filter none
        filter none
        opacity 1
    .slick-dots
      padding: 24px 0 21px;
      li
        display inline-block
        opacity 0.4
        margin: 0 6px;

        &.slick-active
          opacity 1
        button
          border none
          border-radius 50%
          outline none
          background-color: #6793bd;
          width 10px
          height 10px
          color transparent